{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ecommerce/home": ["libs/home/feature/src/index.ts"],
      "@ecommerce/layouts/default-layout": [
        "libs/layouts/default-layout/feature/src/index.ts"
      ],
      "@ecommerce/product": ["libs/product/feature/src/index.ts"],
      "@ecommerce/product-data-access": [
        "libs/product/data-access/src/index.ts"
      ],
      "@ecommerce/product-models": ["libs/product/models/src/index.ts"],
      "@ecommerce/product-ui": ["libs/product/ui/src/index.ts"],
      "@ecommerce/shop": ["libs/shop/feature/src/index.ts"],
      "@ecommerce/shop-ui": ["libs/shop/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
